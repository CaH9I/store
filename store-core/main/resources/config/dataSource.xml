<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
  xmlns="http://www.springframework.org/schema/jdbc"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:c="http://www.springframework.org/schema/c"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
    http://www.springframework.org/schema/jdbc
    http://www.springframework.org/schema/jdbc/spring-jdbc-4.3.xsd">

  <beans:bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource"
    c:_0="${db.url}" c:_1="${db.user}" c:_2="${db.password}" p:driverClassName="${db.driver}"/>

  <initialize-database enabled="${db.insertSchema}">
    <script location="classpath:sql/core-schema.sql"/>
  </initialize-database>

  <initialize-database enabled="${db.insertData}">
    <script location="classpath:sql/core-data.sql"/>
  </initialize-database>

</beans:beans>